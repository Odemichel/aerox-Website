              job: t(dict, 'TriathlÃ¨te'),
            },
          ]}
        />
      </div>

      <div>
        <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-6">
          {t(dict, 'book.hero.title.l1')}
          <span class="text-primary">
            {t(dict, 'book.hero.title.l2')}
          </span>
        </h1>

        <p class="text-xl text-muted mb-8" set:html={t(dict, 'book.hero.text')} />

        <form id="form-livre" class="flex flex-col items-center gap-4 max-w-md mx-auto mt-6">
          <input
            type="text"
            id="name-livre"
            placeholder="Ton prÃ©nom"
            required
            class="w-full border rounded p-3 text-secondary"
          />
          <input
            type="email"
            id="email-livre"
            placeholder="Ton adresse email"
            required
            class="w-full border rounded p-3 text-secondary"
          />
          <input
            type="tel"
            id="phone-livre"
            placeholder="Ton numÃ©ro de tÃ©lÃ©phone (optionnel)"
            class="w-full border rounded p-3 text-secondary"
          />
          <div class="flex items-center gap-3 w-full">
            <input type="checkbox" id="whatsapp-livre" class="h-4 w-4" />
            <label for="whatsapp-livre" class="text-sm text-muted"> Ce numÃ©ro est joignable sur WhatsApp </label>
          </div>
          <button type="submit" class="btn-primary px-8 py-4 text-xl w-full">
            Je tÃ©lÃ©charge le guide gratuitement
          </button>
          <p class="text-sm text-muted">ðŸ”’ Pas de spam. DÃ©sinscription possible Ã  tout moment.</p>
          <p id="msg-livre" class="text-sm mt-2 hidden"></p>
        </form>
      </div>
    </div>
  </section>

  <!-- GAIN -->
  <section class="justify-items-center mt-8">
    <Features
      columns={1}
      items={[
        {
          title: t(dict, 'book.gain.title'),
          description: t(dict, 'book.gain.desc'),
          icon: 'tabler:target-arrow',
        },
      ]}
    />

    <StepsSansImage
      title={t(dict, 'book.content.title')}
      items={[
        { title: t(dict, 'book.content.p1'), icon: 'tabler:book' },
        { title: t(dict, 'book.content.p2'), icon: 'tabler:brain' },
        { title: t(dict, 'book.content.p3'), icon: 'tabler:chart-line' },
        { title: t(dict, 'book.content.p4'), icon: 'tabler:adjustments' },
        { title: t(dict, 'book.content.p5'), icon: 'tabler:target-arrow' },
      ]}
    />

    <Note title={t(dict, 'book.vision.title')} description={t(dict, 'book.vision.desc')} />

    <!-- TARGET -->
    <Features
      columns={2}
      title={t(dict, 'book.target.title')}
      items={[
        {
          title: t(dict, 'book.target.good.title'),
          description: t(dict, 'book.target.good.desc'),
          icon: 'tabler:target-arrow',
        },
        {
          title: t(dict, 'book.target.bad.title'),
          description: t(dict, 'book.target.bad.desc'),
          icon: 'tabler:alert-triangle',
        },
      ]}
    />

    <!-- ERREURS -->
    <section>
      <Note title={t(dict, 'book.errors.e1.title')} description={t(dict, 'book.errors.e1.desc')} />
      <div class="-mt-12"></div>
      <Note title={t(dict, 'book.errors.e2.title')} description={t(dict, 'book.errors.e2.desc')} />
      <div class="-mt-12"></div>
      <Note title={t(dict, 'book.errors.e3.title')} description={t(dict, 'book.errors.e3.desc')} />
    </section>

    <!-- METHOD -->
    <Features
      columns={1}
      title={t(dict, 'book.method.title')}
      items={[
        {
          title: t(dict, 'book.method.p1.title'),
          description: t(dict, 'book.method.p1.desc'),
          icon: 'tabler:alert-triangle',
        },
        {
          title: t(dict, 'book.method.p2.title'),
          description: t(dict, 'book.method.p2.desc'),
          icon: 'tabler:wind',
        },
        {
          title: t(dict, 'book.method.p3.title'),
          description: t(dict, 'book.method.p3.desc'),
          icon: 'tabler:search',
        },
        {
          title: t(dict, 'book.method.p4.title'),
          description: t(dict, 'book.method.p4.desc'),
          icon: 'tabler:target-arrow',
        },
      ]}
    />

    <Note title={t(dict, 'book.philo.title')} description={t(dict, 'book.philo.desc')} />

    <StepsSansImage
      title={t(dict, 'book.concrete.title')}
      items={[
        {
          title: t(dict, 'book.concrete.p1.title'),
          icon: 'tabler:alert-triangle',
        },
        {
          title: t(dict, 'book.concrete.p2.title'),
          icon: 'tabler:wind',
        },
        {
          title: t(dict, 'book.concrete.p3.title'),
          icon: 'tabler:search',
        },
        {
          title: t(dict, 'book.concrete.p4.title'),
          icon: 'tabler:target-arrow',
        },
        {
          title: t(dict, 'book.concrete.p5.title'),
          icon: 'tabler:wind',
        },
      ]}
    />

    <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-2 items-center">
      <div class="flex flex-col items-center">
        <img
          src={livreCover.src}
          width={livreCover.width}
          height={livreCover.height}
          alt={t(dict, 'book.hero.alt')}
          class="w-[70%] md:w-[80%] max-w-md float-book"
          loading="eager"
        />
      </div>
      <div class="flex flex-col items-center text-center my-12">
        <p class="max-w-xl text-lg text-primary mb-6">
          {t(dict, 'book.price.desc')}
        </p>
      </div>
    </div>

    <!-- CTA FINAL -->
    <section class="py-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-8">
        {t(dict, 'book.cta.question')}
      </h2>

      <form id="form-livre-final" class="flex flex-col items-center gap-4 max-w-md mx-auto mt-6">
        <input
          type="text"
          id="name-livre-final"
          placeholder="Ton prÃ©nom"
          required
          class="w-full border rounded p-3 text-secondary"
        />
        <input
          type="email"
          id="email-livre-final"
          placeholder="Ton adresse email"
          required
          class="w-full border rounded p-3 text-secondary"
        />
        <input
          type="tel"
          id="phone-livre-final"
          placeholder="Ton numÃ©ro de tÃ©lÃ©phone (optionnel)"
          class="w-full border rounded p-3 text-secondary"
        />
        <div class="flex items-center gap-3 w-full">
          <input type="checkbox" id="whatsapp-livre-final" class="h-4 w-4" />
          <label for="whatsapp-livre-final" class="text-sm text-muted"> Ce numÃ©ro est joignable sur WhatsApp </label>
        </div>
        <button type="submit" class="btn-primary px-8 py-4 text-xl w-full">
          Je tÃ©lÃ©charge le guide gratuitement
        </button>
        <p class="text-sm text-muted">ðŸ”’ Pas de spam. DÃ©sinscription possible Ã  tout moment.</p>
        <p id="msg-livre-final" class="text-sm mt-2 hidden"></p>
      </form>
    </section>
  </section>

  <script>
    async function submitForm(formId: string, msgId: string) {
      const form = document.getElementById(formId) as HTMLFormElement | null;
      const msg = document.getElementById(msgId);

      form?.addEventListener('submit', async (e) => {
        e.preventDefault();

        const suffix = formId === 'form-livre' ? 'livre' : 'livre-final';
        const name = (document.getElementById(`name-${suffix}`) as HTMLInputElement).value.trim();
        const email = (document.getElementById(`email-${suffix}`) as HTMLInputElement).value.trim();
        const phone = (document.getElementById(`phone-${suffix}`) as HTMLInputElement).value.trim();
        const whatsapp = (document.getElementById(`whatsapp-${suffix}`) as HTMLInputElement).checked;

        const lang = window.location.pathname.split('/')[1] || 'fr';
        const res = await fetch(`/${lang}/telechargement/api/subscribe-livre/`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, email, phone, whatsapp }),
        });

        const data = await res.json();
        msg?.classList.remove('hidden', 'text-red-600', 'text-green-600');

        if (data.success) {
          msg!.textContent = "C'est parti ! VÃ©rifie ta boÃ®te mail, le guide arrive ðŸ“©";
          msg?.classList.add('text-green-600');
          form.reset();
        } else {
          msg!.textContent = 'Une erreur est survenue, rÃ©essaie.';
          msg?.classList.add('text-red-600');
        }
        msg?.classList.remove('hidden');
      });
    }

    submitForm('form-livre', 'msg-livre');
    submitForm('form-livre-final', 'msg-livre-final');
  </script>

  <style>
    @keyframes floatBook {
      0% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-14px);
      }
      100% {
        transform: translateY(0px);
      }
    }

    .float-book {
      animation: floatBook 3s ease-in-out infinite;
      will-change: transform;
    }
  </style>
</Layout>
