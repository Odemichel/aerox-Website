---
import type { GetStaticPaths } from 'astro';
import Layout from '~/layouts/PageLayout.astro';
import Features from '~/components/widgets/Features.astro';
import Note from '~/components/widgets/Note.astro';
import Button from '~/components/ui/Button.astro';

import livreCover from '~/assets/images/livre/image_livre_entrainer-aero.png';

import { SUPPORTED_LOCALES, type Locale, getDict, t } from '~/lib/i18n';
import { localizedHref } from '~/utils/localize';

export const prerender = true;

export const getStaticPaths: GetStaticPaths = async () => SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));

const lang = (Astro.params.lang as Locale) ?? 'fr';
const dict = getDict(lang);

const metadata = {
  title: t(dict, 'book.meta.title'),
  description: t(dict, 'book.meta.description'),
  robots: { index: true, follow: true },
};

const checkoutUrl = localizedHref(lang, '/telechargement/api/create-api-livre-checkout/');
---

<Layout metadata={metadata}>
  <!-- HERO -->
  <section class="py-4">
    <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-2 items-center">
      <div class="flex justify-center">
        <img
          src={livreCover.src}
          width={livreCover.width}
          height={livreCover.height}
          alt={t(dict, 'book.hero.alt')}
          class="w-[70%] md:w-[80%] max-w-md float-book"
          loading="eager"
        />
      </div>

      <div>
        <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-6">
          {t(dict, 'book.hero.title.l1')}
          <span class="text-primary">
            {t(dict, 'book.hero.title.l2')}
          </span>
        </h1>

        <p class="text-xl text-muted mb-8" set:html={t(dict, 'book.hero.text')} />

        <Button id="btn-checkout-livre" variant="primary" class="px-6 py-3 text-lg">
          {t(dict, 'book.hero.cta')}
        </Button>
      </div>
    </div>
  </section>

  <!-- GAIN -->
  <section class="justify-items-center mt-8">
    <Features
      columns={1}
      items={[
        {
          title: t(dict, 'book.gain.title'),
          description: t(dict, 'book.gain.desc'),
          icon: 'tabler:target-arrow',
        },
      ]}
    />

    <Note title={t(dict, 'book.vision.title')} description={t(dict, 'book.vision.desc')} />

    <!-- TARGET -->
    <Features
      columns={2}
      title={t(dict, 'book.target.title')}
      items={[
        {
          title: t(dict, 'book.target.good.title'),
          description: t(dict, 'book.target.good.desc'),
          icon: 'tabler:target-arrow',
        },
        {
          title: t(dict, 'book.target.bad.title'),
          description: t(dict, 'book.target.bad.desc'),
          icon: 'tabler:alert-triangle',
        },
      ]}
    />

    <!-- ERREURS -->
    <section>
      <Note title={t(dict, 'book.errors.e1.title')} description={t(dict, 'book.errors.e1.desc')} />
      <div class="-mt-12"></div>
      <Note title={t(dict, 'book.errors.e2.title')} description={t(dict, 'book.errors.e2.desc')} />
      <div class="-mt-12"></div>
      <Note title={t(dict, 'book.errors.e3.title')} description={t(dict, 'book.errors.e3.desc')} />
    </section>

    <!-- METHOD -->
    <Features
      columns={1}
      title={t(dict, 'book.method.title')}
      items={[
        {
          title: t(dict, 'book.method.p1.title'),
          description: t(dict, 'book.method.p1.desc'),
          icon: 'tabler:alert-triangle',
        },
        {
          title: t(dict, 'book.method.p2.title'),
          description: t(dict, 'book.method.p2.desc'),
          icon: 'tabler:wind',
        },
        {
          title: t(dict, 'book.method.p3.title'),
          description: t(dict, 'book.method.p3.desc'),
          icon: 'tabler:search',
        },
        {
          title: t(dict, 'book.method.p4.title'),
          description: t(dict, 'book.method.p4.desc'),
          icon: 'tabler:target-arrow',
        },
      ]}
    />

    <Note title={t(dict, 'book.philo.title')} description={t(dict, 'book.philo.desc')} />
    <Features
      columns={1}
      title={t(dict, 'book.concrete.title')}
      items={[
        {
          title: t(dict, 'book.concrete.p1.title'),
          icon: 'tabler:alert-triangle',
        },
        {
          title: t(dict, 'book.concrete.p2.title'),
          icon: 'tabler:wind',
        },
        {
          title: t(dict, 'book.concrete.p3.title'),
          icon: 'tabler:search',
        },
        {
          title: t(dict, 'book.concrete.p4.title'),
          icon: 'tabler:target-arrow',
        },
      ]}
    />

    <!-- CTA FINAL -->
    <section class="py-16 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-8">
        {t(dict, 'book.cta.question')}
      </h2>

      <Button id="btn-checkout-livre-final" variant="primary" class="px-8 py-4 text-xl">
        {t(dict, 'book.cta.button')}
      </Button>
    </section>
  </section>

  <!-- CHECKOUT -->
  <script define:vars={{ checkoutUrl }}>
    const callCheckoutLivre = async () => {
      const res = await fetch(checkoutUrl, {
        method: 'POST',
      });

      const data = await res.json();

      if (data?.url) {
        window.location.href = data.url;
      } else {
        alert(data?.error || 'Stripe error');
      }
    };

    document.getElementById('btn-checkout-livre')?.addEventListener('click', callCheckoutLivre);
    document.getElementById('btn-checkout-livre-final')?.addEventListener('click', callCheckoutLivre);
  </script>
  <style>
    @keyframes floatBook {
      0% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-14px);
      }
      100% {
        transform: translateY(0px);
      }
    }

    .float-book {
      animation: floatBook 3s ease-in-out infinite;
      will-change: transform;
    }
  </style>
</Layout>
