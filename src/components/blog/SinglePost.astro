---
import type { GetStaticPaths } from 'astro';
import { Icon } from 'astro-icon/components';
import PostTags from '~/components/blog/Tags.astro';
import SocialShare from '~/components/common/SocialShare.astro';
import { LINKS } from '~/config/links';
import type { Post } from '~/types';
import { getPermalink } from '~/utils/permalinks';
import { getFormattedDate } from '~/utils/utils';
import { blogImages } from '../../data/blogImages';
import Button from '../ui/Button.astro';

import { getDict, SUPPORTED_LOCALES, t, type Locale } from '~/lib/i18n';

export const prerender = true;

export const getStaticPaths: GetStaticPaths = async () => SUPPORTED_LOCALES.map((lang) => ({ params: { lang } }));
const ensureTrailingSlash = (p: string) => (!p ? p : p.endsWith('/') || p.includes('.') ? p : p + '/');
const withLang = (lang: Locale, href: string) => {
  if (!href) return href;

  // ðŸ”— Cas des ancres: on veut /{lang}/#id (ancre sur la home)
  if (href.startsWith('#')) {
    return `/${lang}/` + href; // ex: "/fr/#pricing"
  }

  // Autres liens
  const path = href.startsWith('/') ? href : `/${href}`;
  const prefixed = `/${lang}${path}`.replace(/\/{2,}/g, '/');
  return ensureTrailingSlash(prefixed);
};
const lang = (Astro.params.lang as Locale) ?? 'fr';
const dict = getDict(lang);

export interface Props {
  post: Post;
  url: string | URL;
}

const { post, url } = Astro.props;
const image = post.imageKey ? blogImages[post.imageKey] : undefined;
---

<section class="py-8 sm:py-16 lg:py-20 mx-auto">
  <article>
    <header class="intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
      <!-- âœ… Meta infos -->
      <div class="flex justify-between flex-col sm:flex-row max-w-3xl mx-auto mt-0 mb-2 px-4 sm:px-6 sm:items-center">
        <p>
          <Icon name="tabler:clock" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
          <time datetime={String(post.publishDate)} class="inline-block">{getFormattedDate(post.publishDate)}</time>
          {
            post.author && (
              <>
                {' '}
                Â· <Icon name="tabler:user" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
                <span class="inline-block">{post.author}</span>
              </>
            )
          }
          {
            post.category && (
              <>
                {' '}
                Â·{' '}
                <a class="hover:underline inline-block" href={getPermalink(post.category.slug, 'category')}>
                  {post.category.title}
                </a>
              </>
            )
          }
          {
            post.readingTime && (
              <>
                {' '}
                &nbsp;Â· <span>{post.readingTime}</span> min read
              </>
            )
          }
        </p>
      </div>

      <!-- âœ… Titre + excerpt -->
      <h1
        class="px-4 sm:px-6 max-w-3xl mx-auto text-4xl md:text-5xl font-bold leading-tighter tracking-tighter font-heading"
      >
        {post.title}
      </h1>
      {
        post.excerpt && (
          <p class="max-w-3xl mx-auto mt-4 mb-8 px-4 sm:px-6 text-xl md:text-2xl text-muted dark:text-slate-400 text-justify">
            {post.excerpt}
          </p>
        )
      }

      <!-- âœ… Image via dictionnaire -->
      {
        image ? (
          <img
            src={image.src}
            width={image.width}
            height={image.height}
            alt={post.title}
            class="max-w-[300px] lg:max-w-[400px] mx-auto mb-6 sm:rounded-md bg-gray-400 dark:bg-slate-700"
            loading="eager"
            decoding="async"
          />
        ) : (
          <div class="max-w-3xl mx-auto px-4 sm:px-6">
            <div class="border-t dark:border-slate-700" />
          </div>
        )
      }
    </header>

    <!-- âœ… Contenu de l'article -->
    <div
      class="mx-auto px-6 sm:px-6 max-w-3xl prose prose-md lg:prose-xl dark:prose-invert prose-headings:font-heading prose-headings:font-bold prose-headings:text-primary prose-headings:leading-tighter prose-a:text-primary dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8 prose-headings:scroll-mt-[80px]"
    >
      <slot />
    </div>

    <div class="flex justify-center mt-8">
      <Button variant="primary" class="px-3 md:px-3 items-center" href={withLang(lang, '/method/')}>
        {t(dict, 'blog.aerox.method')}
        <Icon name="tabler:chevron-right" class="w-5 h-5 ml-1.5" />
      </Button>
    </div>
    <div class="flex justify-center mt-8">
      <Button variant="primary" class="px-3 md:px-3 items-center" href={LINKS.pricing}>
        {t(dict, 'blog.aerox.offers')}
        <Icon name="tabler:chevron-right" class="w-5 h-5 ml-1.5" />
      </Button>
    </div>

    <!-- âœ… Tags + Social -->
    <div class="mx-auto px-6 sm:px-6 max-w-3xl mt-8 flex justify-between flex-col sm:flex-row">
      <PostTags tags={post.tags} class="mr-5 rtl:mr-0 rtl:ml-5" />
      <SocialShare
        url={url}
        text={post.title}
        image={image?.src}
        class="mt-5 sm:mt-1 align-middle text-gray-500 dark:text-slate-600"
      />
    </div>
  </article>
</section>
