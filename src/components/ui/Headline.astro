---
import { twMerge } from 'tailwind-merge';
import type { Headline as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  subsubtitle = await Astro.slots.render('subsubtitle'),
  tagline,
  classes = {},
} = Astro.props;

const {
  container: containerClass = 'max-w-3xl',
  title: titleClass = 'text-3xl md:text-4xl ',
  subtitle: subtitleClass = 'text-xl',
subsubtitle: subsubtitleClass = 'text-xl',
} = classes;
---

{
  (title || subtitle || subsubtitle || tagline) && (
    <div class={twMerge('mb-8 md:mx-auto md:mb-12 text-center', containerClass)}>
      {tagline && (
        <p class="inline-block px-3 py-1 mb-4 text-base  dark:text-muted border rounded-full dark:border-primary-light font-bold tracking-wide uppercase" set:html={tagline} />
      )}
      {title && (
        <h2
          class={twMerge('font-bold leading-tighter tracking-tighter font-heading text-heading', titleClass)}
          set:html={title}
        />
      )}
      <h3
          class="sr-only"
          set:html={subsubtitle}
        />

      {subtitle && <p class={twMerge('mt-4 text-muted', subtitleClass)} set:html={subtitle} />}
    </div>
  )
}
